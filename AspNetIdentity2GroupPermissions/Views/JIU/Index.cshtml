@model IdentitySample.Models.JIUViewModel
<br />
<br />
<br />
<div id="mdivG">
    @using (Html.BeginForm("FindTemplate", "JIU", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <h4 style="text-align:left;padding-left:10px"><b>Template Information*</b> </h4>
            <hr />
            <div class="form-group">
                <label class="control-label col-sm-2" for="lang" style="font-size:14px !important">Original Language*</label>
                <div class="col-sm-4 col-md-4">
                    @(Html.Kendo().DropDownListFor(m => m.lang_ID)
                        .Name("lang_ID")
                        .OptionLabel("Select Section...")
                        .DataTextField("Name")
                        .DataValueField("ID")
                         .HtmlAttributes(new { required = "required", data_required_msg = "Select Language", style = "width: 100%" })
                        // .Events(e => e.Change("ChangeLang"))
                        .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("GetLanguages", "helper");
                            });

                        }
                        )
                    )
                    <span class="k-invalid-msg" data-for="lang"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="gdoc" style="font-size:14px !important">gDoc Number</label>
                <div class="col-sm-4 col-md-4">
                    @(Html.Kendo().TextBoxFor(m => m.Gdoc)
                    .Name("Gdoc")
               .HtmlAttributes(new { placeholder = "gDoc Number", style = "width: 100%" })
                    )
           
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="sym" style="font-size:14px !important">Symbol*</label>
                <div class="col-sm-4 col-md-4">
                    @(Html.Kendo().TextBoxFor(m => m.Sym)
                    .Name("Sym")
               .HtmlAttributes(new { placeholder = "Symbol 1", required = "required", data_required_msg = "Type Symbol", style = "width: 100%" })
                    )
                    <span class="k-invalid-msg" data-for="sym"></span>
                </div>
                          </div>

            @*<div class="form-group">
                <label class="control-label col-sm-2" for="olang" style="font-size:14px !important">Original Language</label>
                <div class="col-sm-4 col-md-4">
                    @(Html.Kendo().DropDownListFor(m => m.Olang_ID)
                        .Name("Olang_ID")
                        .OptionLabel("Select Original lang..")
                        .DataTextField("Name")
                        .DataValueField("ID")
                         .HtmlAttributes(new { required = "required", data_required_msg = "Select Language", style = "width: 100%" })
                        .DataSource(source =>
                        {
                            source.Read(read =>
                             {
                                 read.Action("GetOlang", "helper")
                                    .Data("filterOlang");
                             })
                             .ServerFiltering(true);
                        })
                      .Enable(false)
                      .AutoBind(false)
                      .CascadeFrom("lang_ID")
                    )

                    <span class="k-invalid-msg" data-for="olang"></span>
                </div>
            </div>*@

            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">Title</label>
                @*<div class="col-sm-8 col-md-8">
                @(Html.Kendo().TextBoxFor(m => m.JTitle)
                .Name("JTitle")
                .HtmlAttributes(new { @placeholder = "Title", style = "width: 100%" })
                )
            </div>*@
                <div class="col-sm-8 col-md-8">
                    @Html.TextAreaFor(m => m.JTitle, new { @class = "form-control", @placeholder = "Document Title" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">Prepared By </label>

                @*<div class="col-sm-10 col-md-0">
                    @(Html.TextAreaFor(m => m.Pname)
                        .Name("Pname")
                          .HtmlAttributes(new { @placeholder = "Prepared By" })
                    )
                </div>*@

                <div class="col-sm-10 col-md-0">
                @Html.TextAreaFor(m=>m.Pname, new {@class = "form-control", @placeholder = "Prepared By" })    
                </div>


                </div>
           
            <div class="form-group">
                <div style="text-align:center">
                    <input type="submit" value="Generate" class="btn btn-default" id="next" />
                </div>
            </div>

        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $("form").kendoValidator();
    });
    
    function filterOlang() {
        return {
            t: $("#lang_ID").val()
        };
    }
</script>
