@model IEnumerable<IdentitySample.Models.ApplicationRole>

<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @*<label class="control-label col-sm-5" for="name" style="font-size:14px !important"> User Managment</label>*@
                <div class="col-sm-1">
                    <b>Role Managment</b>
                </div>
                <div class="col-sm-1 col-sm-push-4">

                    @(Html.Kendo().Button()
                        .Name("NewRole")
                        .HtmlAttributes(new { type = "button", @class = "k-primary" })
                        .Content("Add Role")
                    )
                </div>
                <br />
                <br />

            </div>
            <div class="panel-body">
                <table id="assets-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th></th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
     $(document).ready(function () {

         $('#assets-data-table').DataTable();
         $('#NewRole').click(function (e) {
             location.href = '@Url.Content("~//RolesAdmin/Create/")';
         });
     });


    </script>
}

<style>
    .demo-section p {
        margin: 0 0 30px;
        line-height: 50px;
    }

    .NewClass {
        background-color: #337ab7;
    }

    .demo-section p .k-button {
        margin: 0 10px 0 0;
    }

    .k-primary {
        min-width: 150px;
        background-color: #4080b9;
    }
</style>


  
