@model IdentitySample.Models.ECEViewModel
<br />
<br />
<br />
<div id="mdivG">
    @using (Html.BeginForm("Generate", "ECE", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <h4 style="text-align:left;padding-left:16px"><b>Extra Information*</b> </h4>
            <hr />
            <div class="form-group">
                <label class="control-label col-sm-2" for="prep" style="font-size:14px !important">Report Num*</label>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().TextBoxFor(m => m.Prep)
                    .Name("Prep")
            .HtmlAttributes(new { placeholder = "Report Number", required = "required", data_required_msg = "Enter Report Number", style = "width: 100%" })
                    )
                    <span class="k-invalid-msg" data-for="prep"></span>
                </div>
                <label class="control-label col-sm-2" for="prep" style="font-size:14px !important">Year*</label>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().TextBoxFor(m => m.CaseYear)
                    .Name("CaseYear")
                    .Value(DateTime.Now.Year.ToString())
            .HtmlAttributes(new { placeholder = "Year", required = "required", data_required_msg = "Enter Year", style = "width: 100%" })
                    )
                    <span class="k-invalid-msg" data-for="prep"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">Session</label>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().TextBoxFor(m => m.SNum)
                    .Name("SNum")
                    .HtmlAttributes(new { @placeholder = "Session Number" })
                    )
                </div>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().DatePickerFor(m => m.Sdate).Name("Sdate").Value("").Format("MM/dd/yyyy").HtmlAttributes(new { @placeholder = "Start Date" }))
                </div>

                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().DatePickerFor(m => m.Edate).Name("Edate").Value("").Format("MM/dd/yyyy").HtmlAttributes(new { @placeholder = "End Date" }))
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important"></label>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().TextBoxFor(m => m.splace)
                         .Name("splace")
                         .HtmlAttributes(new { required = "required", data_required_msg = "Enter Session Place", Value = "Geneva" })
                    )
                    <span class="k-invalid-msg" data-for="splace"></span>
                </div>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().TextBoxFor(m => m.loca)
                         .Name("loca")
                         .HtmlAttributes(new { required = "required", data_required_msg = "Enter Session Location", Value = "Palais des Nations" })
                    )
                    <span class="k-invalid-msg" data-for="loca"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">Agenda </label>

                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().TextBoxFor(m => m.AgendaItem)
                        .Name("AgendaItem")
                          .HtmlAttributes(new { @placeholder = "Title" })
                    )
                </div>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().TextBoxFor(m => m.AgendaNum)
            .Name("AgendaNum")
            .HtmlAttributes(new { @placeholder = "Item" })
                    )
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">Addendum</label>
                <div class="col-sm-1 col-md-1">
                    @(Html.Kendo().CheckBoxFor(m => m.cAdd)
                         .Checked(false)
                    )
                </div>
                <div class="col-sm-1 col-md-1">
                    @(Html.Kendo().TextBoxFor(m => m.Add)
                    .Name("Add")
                    .HtmlAttributes(new { @placeholder = "Addendum No." })
                    )

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">Corrigendum </label>
                <div class="col-sm-1 col-md-1">
                    @(Html.Kendo().CheckBoxFor(m => m.cCor)
                         .Checked(false)
                    )
                </div>
                <div class="col-sm-1 col-md-1">
                    @(Html.Kendo().TextBoxFor(m => m.Cor)
                    .Name("Add")
                    .HtmlAttributes(new { @placeholder = "Corrigendum No." })
                    )

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">CRP</label>
                <div class="col-sm-1 col-md-1">
                    @(Html.Kendo().CheckBoxFor(m => m.cpr)
                       .Checked(false)
                    )
                </div>
                <div class="col-sm-1 col-md-1">
                    @(Html.Kendo().TextBoxFor(m => m.cprnum)
                    .Name("cprnum")
                    .HtmlAttributes(new { @placeholder = "CRP No." })
                    )

                </div>

            </div>
            <br />
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">   Versions Required</label>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().MultiSelectFor(m => m.version)
                                .Name("version1")
                                .Placeholder("Select Versions...")
                                .DataTextField("Text")
                                .DataValueField("Text")
                                .DataSource(source =>
                                {
                                    source.Read(read =>
                                    {
                                        read.Action("GetVersions", "Helper")
                                            .Data("LangID");
                                    });

                                }


                                )
                    )
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name" style="font-size:14px !important">QR Code</label>
                <div class="col-sm-3 col-md-3">
                    @(Html.Kendo().CheckBoxFor(m => m.qrcode)
            .Checked(false)
                    )
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-15 col-md-15">
                    <hr />
                </div>
            </div>



            <div class="form-group">
                <div style="text-align:center">
                    <input type="submit" value="Next" class="btn btn-default" />
                </div>
            </div>

        </div>


        @(Html.HiddenFor(m => m.SCat))
                @(Html.HiddenFor(m => m.date))
                @(Html.HiddenFor(m => m.dist))
                @(Html.HiddenFor(m => m.lang_ID))
                @(Html.HiddenFor(m => m.Cat))

    }
</div>


<script>
    $(function () {
        $("form").kendoValidator();
    });
    function LangID() {
        return {
            t: $("#lang_ID").val()
        };
    }
</script>
<style>
    #mdiv {
        margin: auto;
        width: 50%;
        padding: 10px;
    }

    #mdivG {
        margin: auto;
        width: 800px;
        height: auto;
        padding: 0px;
        background-color: #ffffff;
        border: 2px solid #5a6496;
        border-radius: 2px;
        /*background-image: url('/assets/UN-Logo (1).png');
            background-size: 300px 300px;*/
        background-repeat: no-repeat;
        background-position: 90% 30%;
    }


    #mdiv section {
        margin-left: auto;
        margin-right: auto;
        display: block;
    }
</style>
